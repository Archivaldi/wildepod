<% include ../../../partials/header %>
<% include ../../../partials/navbar %>

<div class="container">
    <form action="/edit_camera/<%=result[0].user_id%>/<%= result[0].location_id %>/<%= result[0].camera_name%>" method="POST">
        <h1><%= result[0].camera_name %></h1>
     <div class="row">
         <div class="col-12">
             <label for="camera_status">Camera Status: </label>
             <select name="camera_status" id="camera_status" name="camera_status">
                 <option value="<%= result[0].status%>"><%= result[0].status %></option>
                 <option value="Ready to Deploy">Ready to deploy</option>
                 <option value="Deployed">Deployed</option>
                 <option value="Needs Repair">Needs Repair</option>
                 <option value="Out for repair">Out for repair</option>
                 <option value="Needs check">Needs check</option>
                 <option value="Battery changed">Battery changed</option>
                 <option value="Data uploaded">Data uploaded</option>
                 <option value="Camera moved">Camera moved</option>
             </select>
         </div>
     </div>
     <div class="row">
        <div class="col-12">
         <label for="notes">Notes: </label>
         <input type="text" id="notes" name="notes">
         </div>

     </div>
     <button>Submit</button>
 </form>
</div>